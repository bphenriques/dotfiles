[core]
	editor = vim
	pager = diff-so-fancy | less --tabs=4 -RFX
[alias]
	co = checkout
	g = log --pretty=oneline --graph --abbrev-commit
	s = status -s
	pushf = push --force-with-lease
	amend = commit --amend

	# Create patches by using git patch > changes.patch
	patch = !git --no-pager diff --no-color

        # A more concise and readable git log
        ls = log --pretty=format:"%C(yellow)%h\\ %Creset%s%Cblue\\ [%cn]\\%Cred%d" --decorate
   
        iadd = !git ls-files --modified --others --exclude-standard | \
		fzf --keep-right --multi --reverse --marker='* ' --preview-window='right:70%' \
	            --preview 'git diff --color=always -- {-1} | diff-so-fancy' | \
                    xarg | git add

        idiff= !git ls-files --modified --others --exclude-standard | \
                fzf --keep-right --reverse --marker='* ' --preview-window=right:70% \
                    --preview 'git diff --color=always -- {-1} | diff-so-fancy'

[commit]
	template = ~/.config/git/gitmessage
	gpgsign = true

# ------------------------------
# Sentitive information on a separate file
# ------------------------------
[include]
	path = ~/.config/git/gitconfig.sensitive

# ------------------------------
# Color settings for diff-so-fancy
# ------------------------------
[color]
	ui = auto
[color "diff"]
	meta = 11
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[diff-so-fancy]
	stripLeadingSymbols = false
