@theme "custom"

window {
  transparency:                "real";
  location:                    center;
  anchor:                      center;
  fullscreen:                  false;
  width:                       600px;

  margin:                      0px;
  padding:                     0px;
  border:                      0px solid;
  border-radius:               10px;
}

mainbox {
  enabled:                     true;
  spacing:                     10px;
  padding:                     30px;
  children:                    [ "inputbar", "listview" ];
}

inputbar {
  enabled:                     true;
  spacing:                     10px;
  margin:                      0px;
  padding:                     0px;
  border:                      0px solid;
  children:                    [ "textbox-prompt-colon", "entry" ];
}

textbox-prompt-colon {
  enabled:  true;
  padding:  5px 0px;
  expand:   false;
  str:      "ï€‚";
}

entry {
    enabled:                     true;
    padding:                     5px 0px;
}

scrollbar {
    handle-width:                5px ;
    border-radius:               10px;
    background-color:            @alternate-normal-background;
}

// FIX THIS ON THE THEME
element alternate.active {
  background-color: @active-background;
  text-color: @active-text;
}

element alternate.normal {
  background-color: @normal-background;
  text-color: @normal-text;
}

element alternate.urgent {
  background-color: @urgent-background;
  text-color: @urgent-text;
}