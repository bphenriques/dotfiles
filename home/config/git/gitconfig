[alias]
    co      = checkout
    s       = status -s
    pick    = cherry-pick
    rb      = rebase
    pushf   = push --force-with-lease
    amend   = commit --amend
    graph   = log --pretty=oneline --graph --abbrev-commit
    patch   = !git --no-pager diff --no-color                                                                                 # Create patches by using `git patch > changes.patch`.
    ls      = log --pretty=format:"%C(yellow)%h%d\\ %Creset%s%Cblue\\ [%cn]\\%C %C(black)%C(bold)%cr%Creset" --decorate       # A more concise and readable git log.

[commit]
    template = ~/.config/git/gitmessage
    gpgsign = true

[pull]
